{
  "id": "pc-credential-health",
  "name": "PicoClaw Credential Health",
  "description": "PicoClaw verifies its own credential access and reports missing or broken credentials",
  "agent": "picoclaw",
  "trigger": {
    "schedule": "0 7 * * *",
    "event": "manual"
  },
  "process": [
    "Verify ANTHROPIC_API_KEY is accessible via juggler_resolve_composite(query='anthropic-api-key')",
    "Verify GITHUB_TOKEN via juggler_resolve_composite(query='github-token')",
    "Check Aperture connectivity by calling juggler_aperture_usage(agent='picoclaw')",
    "Report findings: missing credentials, resolution failures"
  ],
  "tools": [
    "juggler_resolve_composite",
    "juggler_aperture_usage",
    "juggler_campaign_status"
  ],
  "targets": [
    {
      "forge": "github",
      "org": "tinyland-inc",
      "repo": "picoclaw"
    }
  ],
  "outputs": {
    "setecKey": "remotejuggler/campaigns/pc-credential-health"
  },
  "guardrails": {
    "maxDuration": "15m",
    "readOnly": true
  }
}
