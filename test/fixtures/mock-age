#!/bin/sh
# Mock age for CI testing.
# Set REMOTE_JUGGLER_AGE_PATH to this script's path.

case "$1" in
  --version)
    echo "v1.2.0"
    exit 0
    ;;
  -d)
    # Decrypt mode (pipe through)
    cat
    exit 0
    ;;
  *)
    echo "Usage: age [OPTIONS] [RECIPIENTS...] [INPUT]" >&2
    exit 1
    ;;
esac
