{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://remote-juggler.dev/schemas/repo-state.json",
  "title": "RemoteJuggler Repository State",
  "description": "Per-repository state stored in .git/remote-juggler.json",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "const": "1.0.0"
    },
    "pinnedIdentity": {
      "type": "string",
      "description": "Pinned identity for this repository (overrides global when forceMode is false)"
    },
    "autoDetected": {
      "type": "boolean",
      "description": "Whether the identity was auto-detected from remote URL",
      "default": false
    },
    "detectedProvider": {
      "type": "string",
      "enum": ["gitlab", "github", "bitbucket", "custom"],
      "description": "Provider detected from remote URL"
    },
    "lastUsed": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last identity use in this repo"
    },
    "history": {
      "type": "array",
      "description": "History of identity switches in this repo",
      "items": {
        "type": "object",
        "properties": {
          "identity": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "reason": {
            "type": "string",
            "enum": ["manual", "auto-detect", "force-mode", "cli"]
          }
        },
        "required": ["identity", "timestamp"]
      },
      "maxItems": 10
    }
  },
  "required": ["version"]
}
