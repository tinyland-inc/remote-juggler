# RemoteJuggler Documentation Container
#
# Build and serve MkDocs documentation locally with live reload.
#
# Usage:
#   podman build -t remote-juggler-docs -f docs/Containerfile .
#   podman run -p 8000:8000 -v .:/docs:ro remote-juggler-docs
#
# Or use docker-compose.yml for easier management.

FROM python:3.12-slim

LABEL maintainer="jess@tinyland.dev"
LABEL org.opencontainers.image.title="RemoteJuggler Docs"
LABEL org.opencontainers.image.description="MkDocs documentation server for RemoteJuggler"

WORKDIR /docs

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install MkDocs and plugins
RUN pip install --no-cache-dir \
    mkdocs>=1.6.0 \
    mkdocs-material>=9.5.0 \
    pymdown-extensions>=10.0 \
    linkchecker>=10.0

# Install htmltest for dead link checking
RUN ARCH=$(dpkg --print-architecture) && \
    if [ "$ARCH" = "amd64" ]; then \
        curl -sL https://github.com/wjdp/htmltest/releases/download/v0.17.0/htmltest_0.17.0_linux_amd64.tar.gz | tar xz -C /usr/local/bin; \
    elif [ "$ARCH" = "arm64" ]; then \
        curl -sL https://github.com/wjdp/htmltest/releases/download/v0.17.0/htmltest_0.17.0_linux_arm64.tar.gz | tar xz -C /usr/local/bin; \
    fi

EXPOSE 8000

# Default: serve with live reload
ENTRYPOINT ["mkdocs"]
CMD ["serve", "--dev-addr=0.0.0.0:8000"]
